<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--item name="android:actionMenuTextColor">#000</item-->
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#000</item>
        <!--For color of text of menu items-->
        <item name="android:textColor">#000</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/AppActionBarStyle</item>
        <item name="android:statusBarColor">#00695C</item>
    </style>

    <style name="AppActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@drawable/theme_color</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

</resources>
